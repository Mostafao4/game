<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.gui.PlayerInputController">
    <children>
        <Label text="Enter Player Names" />
        <TextField fx:id="player1Name" promptText="Player 1 Name" />
        <TextField fx:id="player2Name" promptText="Player 2 Name" />
        <Button text="Start Game" onAction="#handleStartGame" />
    </children>
</VBox>
